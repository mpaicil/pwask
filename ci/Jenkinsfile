pipeline {
  agent {
      node{
          label 'docker-agent'
      }
  }
  stages {
    stage('build') {
      steps {
        sh 'python3 -m venv env'
        sh '. env/bin/activate'
        sh 'pip3 install pytest'
      }   
    }
    stage('test') {
      steps {
        sh 'ls'
        sh './env/bin/pytest'
      }   
    }
  }
}