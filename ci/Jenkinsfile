pipeline {
  agent { 
    node { 
      label 'mykepythonpipe'
    } 
  }
  stages {
    stage('build') {
      steps {
        sh 'pip install -U pytest'
        sh 'python3 -m venv env'
        sh '. env/bin/activate'
      }
    }
    stage('test') {
      steps {
        sh 'pytest'
      }   
    }
  }
}