pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        withPythonEnv('python') {
          sh 'python --version'
          sh 'virtualenv venv --distribute'
          sh '. venv/bin/activate'
          sh 'pip install -U pytest'
          sh 'python3 -m venv env'
          sh '. env/bin/activate'
        }
      }
    }
    stage('test') {
      steps {
        sh 'pytest'
      }   
    }
  }
}